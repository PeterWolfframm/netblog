---
import Announcement from "./Announcement.astro";

export interface Props {
  heading: string;
  subheading: string;
  announcement: string;
}
const { heading, subheading, announcement } = Astro.props;
---

<div class="max-w-3xl pt-20 pb-32 mx-auto sm:pt-48 sm:pb-40 text-center">
  <!-- <Announcement announcement="asdfasdf" /> -->

  <h1 class="text-4xl font-bold tracking-tight sm:text-6xl font-display">
    {heading}
  </h1>
  <p class="mt-6 text-lg leading-8 text-gray-600">
    {subheading}
  </p>
  <div class="flex mt-8 gap-x-4 justify-center">
    <a
      href="#"
      class="inline-block rounded-lg bg-fuchsia-600 px-4 py-1.5 text-base font-semibold leading-7 text-white shadow-sm ring-1 ring-indigo-600 hover:bg-indigo-700 hover:ring-indigo-700"
    >
      Get started
      <span class="text-indigo-200" aria-hidden="true"> &rarr;</span>
    </a>
    <a
      href="#"
      class="inline-block rounded-lg px-4 py-1.5 text-base font-semibold leading-7 text-gray-900 ring-1 ring-gray-900/10 hover:ring-gray-900/20"
    >
      Live demo
      <span class="text-gray-400" aria-hidden="true"> &rarr;</span>
    </a>
  </div>
</div>
