---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<div
  class="flex flex-col justify-between flex-1 p-6 bg-white transition ease-in-out delay-50 hover:scale-110"
>
  <div class="">
    <a href={post.url} class="block mt-2">
      <h2
        class="text-3xl font-semibold text-gray-900 font-display underline decoration-primary-300"
      >
        {post.frontmatter.title}
      </h2>
      <p class="mt-3 text-base text-gray-500">
        {post.frontmatter.description}
      </p>
    </a>
  </div>
  <div class="flex items-center mt-6">
    <div class="ml-3">
      <div class="flex space-x-1 text-sm text-gray-500">
        <time datetime="2020-03-10">{post.frontmatter.publishDate}</time>
        <span aria-hidden="true">&middot;</span>
        <span>4 min read</span>
      </div>
    </div>
  </div>
</div>
